{
  "firestore": {
    "rules": "firestore-rules",
    "indexes": "firestore-indexes"
  },
  "hosting": {
    "public": "public-folder",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage-rules"
  }
}
